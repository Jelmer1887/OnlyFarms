<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginView">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="nl.tue.onlyfarms.view.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_homeView"
            app:destination="@id/homeView" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="nl.tue.onlyfarms.view.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeView"
        android:name="nl.tue.onlyfarms.view.HomeView"
        android:label="Overview"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/loginView"
        android:name="nl.tue.onlyfarms.view.LoginView"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginView_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <activity
        android:id="@+id/registerView"
        android:name="nl.tue.onlyfarms.view.RegisterView"
        android:label="activity_register"
        tools:layout="@layout/activity_register" />
</navigation>